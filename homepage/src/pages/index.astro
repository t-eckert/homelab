---
import "../global.css";
import Site from "../components/site.astro";

const sites = [
	{
		title: "Tailscale Dashboard",
		href: "https://login.tailscale.com/admin/machines",
		icon: "https://tailscale.com/favicon.png",
	},
	{
		title: "ntfy",
		href: "https://ntfy.feist-gondola.ts.net/",
		icon: "/ntfy-icon.ico",
	},
	{
		title: "Home Assistant",
		href: "http://homeassistant.local:8123/config/integrations/dashboard",
		icon: "https://play-lh.googleusercontent.com/bGn6qxUHwqZmgtv7RwgxCzl4Uy26SFQrJljVmoOvoIKWa-Xty8s0vOUWcgovUAEAKXnI=w480-h960-rw",
	},
];
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Homepage</title>
	</head>
	<body class="bg-stone-950 text-white">
		<div
			class="p-3 flex flex-row justify-between border-b border-stone-800"
		>
			<h1 class="font-semibold text-sm">Homepage</h1>
			<a
				href="https://github.com/t-eckert/homelab"
				target="_blank"
				rel="noopener noreferrer"
				class="px-2 py-0.5 rounded-full bg-stone-900 font-medium text-sm"
				>Repo</a
			>
		</div>

		<section
			class:list={[
				"grid",
				"grid-cols-1",
				"sm:grid-cols-2",
				"md:grid-cols-3",
				"lg:grid-cols-4",
				"xl:grid-cols-5",
				"gap-4",
				"mt-4",
				"mx-auto",
				"max-w-7xl",
				"p-3",
			]}
		>
			{
				sites.map((site) => (
					<Site
						title={site.title}
						href={site.href}
						icon={site.icon}
					/>
				))
			}
		</section>
	</body>
</html>
